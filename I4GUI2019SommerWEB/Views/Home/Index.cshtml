@model IEnumerable<I4GUI2019SommerWEB.Models.Location>
@{
    ViewData["Title"] = "Home Page";
}

<div class="row" style="margin-top: 10px; margin-bottom: 10px;">
    <div class="col-md-4">
        <form class="form-inline" asp-action="filter" >
            <input type="text" class="form-control" id="filter" name="filter" placeholder="Enter Name">
            <input type="submit" class="btn btn-default" value="Filter" />
        </form>
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LocationId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Street)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Streetnr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ZipCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Trees)
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var location in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => location.LocationId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => location.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => location.Street)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => location.Streetnr)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => location.ZipCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => location.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => location.Trees)
                </td>
                <td>
                    <a role="button" 
                       class="btn btn-default" 
                       asp-action="Create" 
                       asp-controller="Sensor" 
                       asp-route-id="@location.LocationId">Add Sensor</a>
                </td>
            </tr>
        }
    </tbody>
</table>
